extends /partials/layout

block content

  .row
    form.col.s12(method="post", action="/signup")
      .row
        .input-field.col.s6
          i.material-icons.prefix account_circle
          input#icon_prefix.validate(type="email", name="email", maxlength="20" required)
          label(for='icon_prefix') Email
        .input-field.col.s6
          i.material-icons.prefix lock
          input#icon_telephone.validate(type="password", name="password" required)
          label(for='icon_lock') Password
      button.btn.waves-effect.waves-light(type='submit')
        | Signup
    a.signup-login-button(href="/login") Login
