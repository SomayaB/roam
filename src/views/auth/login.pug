extends /partials/layout

block content
  h1 Login
    form(method="post", action="auth/login")
      label
        span email:
        input(type="email", name="email", maxlength="20")
      label
        span password:
        input(type="password", name="password")
      input(type="submit" value="Login") 
  a(href="/auth/signup") Signup
